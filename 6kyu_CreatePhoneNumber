public class Kata {
  public static String createPhoneNumber(int[] numbers) {
    StringBuffer sb = new StringBuffer("(");
    for (int i=0; i<numbers.length ;i++){
      if (i==3)
      sb.append(") "+numbers[i]);
      else if (i==6)
      sb.append("-"+numbers[i]);
      else sb.append(numbers[i]);
      }
      return sb.toString();
  }
}
